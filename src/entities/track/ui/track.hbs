<div class="track__left_side">
    <img class="track__img" src="{{ track.image }}">
    <div class="track__info">
        <div class="track__name">{{ track.name }} </div>
        <div class="track__artist">
            <a class="track__artist__artist_link link"
                href="/artist/{{ track.artistID }}">
                {{ track.artistName }}
            </a> 
        </div>
    </div>
</div> 
<div class="track__right_side">
    {{#if isMyPlaylist }}
    <img src="/images/icons/trash.svg" id="delete-from-playlist" class="track__delete-btn icon">
    {{/if}}
    {{#if user.isAuthorized}}
    <img src="/images/icons/heart-black.svg" id="like-track" class="track__like-btn icon {{#if isFavorite}} track__liked {{/if}}">
    <img src="/images/icons/add.svg" id="add-to-playlist" class="track__add-btn icon">
    {{/if}}
    {{ track.duration }}
</div>

