<div class="album_card__container">
  <div class="album_card__block">
    <div class="album_card__text">Альбом</div>
    <div class="album_card__wrapper">
      <img src="{{album.image}}" class="album_card__img" />
      <div class="album_card__aside">
        <div class="album_card__info album_info">
          <div class="album_info__name"> {{album.name}} </div>
          <div class="album_info__artist_release">
            <a class="album_info__artist_release__artist_link link"
              href="/artist/{{ album.artistID }}">
              {{ album.artistName }}
            </a>
            · {{ album.release }}
          </div>
          <div class="album_info__likes">123 оценок нравится</div>
          <div class="album_info__listen">123 прослушиваний в месяц</div>
        </div>
        <div class="album_info__buttons buttons">
          <div class="buttons__subscribe">
            <img src="/images/icons/sub.svg" class="buttons__icon" />
            Подписаться
          </div>
          <div class="buttons__listen">
            <img src="/images/icons/listen.svg" class="buttons__icon" />
            Слушать
          </div>
        </div>
      </div>
    </div>
  </div>
</div>