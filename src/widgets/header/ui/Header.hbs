<div class="header__container">
  <div class="header__row">
    <div class="header__left-block">
      <img class="header__img_logo" src="/images/icons/logo_light.svg">
      <a
        class="header__link_logo link"
        id="header_logo_link"
        {{#if user}} 
        href="/"
        {{else}}
        href="/signin"
        {{/if}}
      >NovaMusic</a>
    </div>
    <div class="header__right-block" id="header_signin_menu">
      {{#if user}}
        <a
          class="header__link_signin"
          id="header_logout_link"
          href="/signin"
        >Выход</a>
      {{else}}
        <a
          class="header__link_signin navlink link"
          id="header_signin_link"
          href="/signin"
        >Войти</a>
        <a
          class="header__link_signup navlink link"
          id="header_signup_link"
          href="/signup"
        >Регистрация</a>
      {{/if}}
    </div>
  </div>
</div>
