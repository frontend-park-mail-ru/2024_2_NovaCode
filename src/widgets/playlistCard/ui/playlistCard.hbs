<div class="{{ styles.playlist_card__container }}">
  <div class="{{ styles.playlist_card__block }}">
    <div class="{{ styles.playlist_card__text }}">Плейлист</div>
    <div class="{{ styles.playlist_card__wrapper }}">
      <img src="{{playlist.image}}" class="{{ styles.playlist_card__img }}" />
      <div class="{{ styles.playlist_card__aside }}">
        <div class="{{ styles.playlist_card__info }} {{ styles.playlist_info }}">
          <div class="{{ styles.playlist_info__name }}"> {{playlist.name}} </div>
          <div class="{{ styles.playlist_info__owner }}">
            Автор: {{playlist.owner_name}}
          </div>
          <div class="{{ styles.playlist_info__likes }}">123 оценок нравится</div>
          <div class="{{ styles.playlist_info__listen }}">123 прослушиваний в месяц</div>
        </div>
        <div class="{{ styles.playlist_info__buttons }} {{ styles.buttons }}">
          <div class="{{ styles.buttons__like }}">
            <img src="{{ heartWhiteIcon }}" class="{{ styles.buttons__icon }}" />
            Нравится
          </div>
          <div class="{{ styles.buttons__listen }}">
            <img src="{{ listenIcon }}" class="{{ styles.buttons__icon }}" />
            Слушать
          </div>
          {{#if isMyPlaylist }}
          <div class="{{ styles.buttons__delete }}">
            <img src="{{ trashWhiteIcon }}" class="{{ styles.buttons__icon }}" />
            Удалить
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
