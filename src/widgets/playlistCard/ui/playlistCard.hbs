<div class="{{ styles.playlist_card__container }} container">
  <div class="{{ styles.playlist_card__block }} block">
    <div class="{{ styles.playlist_card__text }}"><h4>Плейлист</h4></div>
    <div class="{{ styles.playlist_card__wrapper }}">
      <img src="{{playlist.image}}" class="{{ styles.playlist_card__img }} card-img" />
      <div class="{{ styles.playlist_card__aside }}">
        <div class="{{ styles.playlist_card__info }} {{ styles.playlist_info }}">
          <div class="{{ styles.playlist_info__name }}"><h3>{{playlist.name}}</h3></div>
          <div class="{{ styles.playlist_info__owner }}">
            <h4>Автор: {{playlist.owner_name}}</h4>
          </div>
          <div class="{{ styles.playlist_info__likes }}"><h5>123 оценок нравится</h5></div>
          <div class="{{ styles.playlist_info__listen }}"><h5>123 прослушиваний в месяц</h5></div>
        </div>
        <div class="{{ styles.playlist_info__buttons }} buttons">
          <div class="buttons__like buttons__button">
            <img src="{{ heartIcon }}" class="button icon" />
            <h4>Нравится</h4>
          </div>
          <div class="buttons__listen buttons__button">
            <img src="{{ playCircleIcon }}" class="button icon" />
            <h4>Слушать</h4>
          </div>
          <div class="buttons__share buttons__button">
            <img src="/images/icons/send-square-white.svg" class="button icon" />
            <h4>Поделиться</h4>
          </div>
          {{#if isMyPlaylist }}
          <div class="{{ styles.buttons__delete }} buttons__button">
            <img src="{{ musicSquareRemoveIcon }}" class="button icon" />
            <h4>Удалить</h4>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
