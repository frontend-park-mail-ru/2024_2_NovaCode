<div class="statistic__container">
        {{#each stats}}
        <div class="statistic__block">
            <div class="statistic__statistic_item">
                <div class="statistic__topic">
                    {{ topic }}: {{ score }}
                </div>
                <div class="rating__container">
                    <div class="rating__block" data-value="1">1</div>
                    <div class="rating__block" data-value="2">2</div>
                    <div class="rating__block" data-value="3">3</div>
                    <div class="rating__block" data-value="4">4</div>
                    <div class="rating__block" data-value="5">5</div>
                    <div class="rating__block" data-value="6">6</div>
                    <div class="rating__block" data-value="7">7</div>
                    <div class="rating__block" data-value="8">8</div>
                    <div class="rating__block" data-value="9">9</div>
                    <div class="rating__block" data-value="10">10</div>
                </div>
            </div>
        </div>
        {{/each}}
</div>