<div class="upload-avatar__container">
  <div>Загрузка аватарки</div>
  <form id="upload-avatar-form" enctype="multipart/form-data">
    <label for="avatar">Choose file:</label>
    <input
      type="file"
      id="avatar"
      name="file"
      accept=".jpg,.jpeg,.png,.webp,.svg"
      required
    />
    <br />
    <button type="submit">Загрузить</button>
  </form>
</div>
