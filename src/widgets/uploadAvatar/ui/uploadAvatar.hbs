<div class="upload_avatar__container container">
  <div class="upload_avatar__block block">
    <div class="upload_avatar__text"><h4>Загрузка аватарки</h4></div>
    <form class="upload_avatar__form avatar_form" id="upload-avatar-form" enctype="multipart/form-data">
      <div class="upload_avatar__input">
        <label class="avatar_form__input_label" for="avatar">
          <div class="avatar_form__input_btn button"><h4>Выберите файл</h4></div>           
        </label>
        <input
          class="avatar_form__input"
          type="file"
          id="avatar"
          name="file"
          accept=".jpg,.jpeg,.png,.webp,.svg"
          required
        />
      </div>
      <button class="avatar_form__submit_btn button" type="submit"><h4>Загрузить</h4></button>
    </form>
  </div>
</div>
