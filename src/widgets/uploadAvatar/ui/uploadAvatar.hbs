<div class="{{ styles.upload_avatar__container }} container">
  <div class="{{ styles.upload_avatar__block }} block">
    <div class="{{ styles.upload_avatar__text }}"><h4>Загрузка аватарки</h4></div>
    <form class="{{ styles.upload_avatar__form }} {{ styles.avatar_form }}" id="upload-avatar-form" enctype="multipart/form-data">
      <div class="{{ styles.upload_avatar__input }}">
        <label class="{{ styles.avatar_form__input_label }}" for="avatar">
          <div class="{{ styles.avatar_form__input_btn }} button"><h4>Выберите файл</h4></div>           
        </label>
        <input
          class="{{ styles.avatar_form__input }}"
          type="file"
          id="avatar"
          name="file"
          accept=".jpg,.jpeg,.png,.webp,.svg"
          required
        />
      </div>
      <button class="{{ styles.avatar_form__submit_btn }} button" type="submit"><h4>Загрузить</h4></button>
    </form>
  </div>
</div>
