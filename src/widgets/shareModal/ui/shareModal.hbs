<div class="{{ styles.share_modal__fade }}">
    <div class="{{ styles.share_modal__container }}">
        <div class="{{ styles.share_modal__text }}">
            <h4>Поделиться</h4>
        </div>
        <div class="{{ styles.share_modal__btn_container }} {{ styles.share_buttons }}">
            <a href="https://vk.com/share.php?url={{ url }}" target="_blank">
                <img src="{{ vkLogo }}" alt="vk_logo" class="{{ styles.share_buttons__button }}">
            </a>
            <a href="https://t.me/share/url?url={{ url }}" target="_blank">
                <img src="{{ tgLogo }}" alt="tg_logo" class="{{ styles.share_buttons__button }}">
            </a>
            <div class="{{ styles.share_buttons__button }} {{ styles.share_buttons__copy_link }} buttons__button"><h4>Копировать ссылку</h4></div>
        </div>
        <div class="{{ styles.share_modal__btn_container }}">
            <button class="{{ styles.share_modal__btn_cancel }} button"><h4>Отмена</h4></button>
        </div>
    </div>
</div>