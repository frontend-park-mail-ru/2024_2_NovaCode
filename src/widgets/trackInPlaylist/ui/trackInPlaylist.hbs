<div class="{{ styles.track-playlist-modal }}">
    <div class="{{ styles.track-playlist-modal__header }}">
        <h2>Выберите плейлист</h2>
        <button class="{{ styles.track-playlist-modal__close-btn }}">×</button>
    </div>
    <div class="{{ styles.track-playlist-modal__body }}">
        {{#each playlists}}
        <a href="#" class="{{ styles.track-playlist-modal__playlist-link }}" data-id="{{this.id}}">
            {{this.name}}
        </a>
        {{/each}}
    </div>
</div>
