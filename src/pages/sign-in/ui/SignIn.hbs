<div class="{{ styles.login__container }} container">
  <div class="{{ styles.login__intro }} block">
    <h1 class="{{ styles.login__title }}">NovaMusic</h1>
    <h2 class="{{ styles.login__subtitle }}">Музыкальный стриминговый сервис</h2>
    <div class="{{ styles.login__info }}"><h5>Переходите к прослушиванию любимой музыки</h5></div>
  </div>

  <div class="{{ styles.login__form }}">
    <form id="login-form">
      <input
        class="{{ styles.login__input }}"
        type="text"
        id="username"
        name="username"
        placeholder="Имя пользователя"
        required
      />
      <div id="login__username-error" class="{{ styles.login__input-error }}"></div>

      <input
        class="{{ styles.login__input }}"
        type="password"
        id="password"
        name="password"
        placeholder="Пароль"
        required
      />
      <div id="login__password-error" class="{{ styles.login__input-error }}"></div>
      
      <button class="{{ styles.login__submit_btn }} button" type="submit"><h4>Войти</h4></button>
      <div class="{{ styles.login__additional }}">
        <h5>Нет аккаунта?</h5>
        <h4><a class="{{ styles.login__register_site }} link" href="/signup">Зарегистрироваться</a></h4>
      </div>
      <div id="login__general-error" class="{{ styles.login__general-error }}"></div>
    </form>
  </div>
</div>
